    "auth": {
      "token": "your-secret-token-here"
    }
  },
  "controlUI": {
    "enabled": true,
    "dangerousDeviceAuthBypass": false
  },
  "hooks": {
    "enabled": true,
    "token": "your-webhook-token"
  },
